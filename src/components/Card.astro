---
// definimos los typos de las props a recibir
interface Props {
  title: string;
  content?: string;
}
const { title, content = 'content default'} = Astro.props; // sino recibo, pone el default
---

<div class="card">
  <h1>{title}</h1>
  <p>
    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris mollis
    suscipit urna nec pellentesque. Sed scelerisque posuere ligula, a congue
    erat aliquet vitae
